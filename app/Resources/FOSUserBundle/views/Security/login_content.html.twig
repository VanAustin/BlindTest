{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        {{ error.messageKey|trans(error.messageData, 'security') }}
    </div>
{% endif %}


<form class="col-8 m-auto" action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="form-group">
        <label class="" for="username">Nom d'utilisateur</label>
        <input class="" type="text"  name="_username" value="{{ last_username }}" required="required" placeholder="Nom d'utilisateur"/>
    </div>

    <div class="form-group">
        <label class=""  for="password">Mot de passe</label>
        <input class="" type="password" name="_password" required="required" placeholder="Mot de passe"/>
    </div>

    <input class="btn btn-primary" type="submit" value="Se connecter" />
</form>
