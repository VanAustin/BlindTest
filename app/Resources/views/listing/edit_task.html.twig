{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Suppression d'une tâche
{% endblock %}

{% block body %}

    <h2 class="welcome">Editer l'intitulé d'une tâche</h2>

    <div class="col-8 m-auto">
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.title, null, {'label': 'Intitulé de la tâche', 'class': 'welcome' }) }}
                {{ form_errors(form.title) }}
                {{ form_widget(form.title, {'attr': {'placeholder': 'Intitulé de la catégorie'}}) }}
            </div>
			<div class="d-flex justify-content-left">
            <button type="submit" class="btn btn-info mb-5" id="_submit">Modifier</button>
			<a class="btn btn-secondary mb-5" href="{{ path('homepage') }}">Retour Liste des tâches</a>
		</div>
        {{ form_end(form) }}
    </div>

    <div class="d-flex justify-content-left">

    </div>

{% endblock %}
