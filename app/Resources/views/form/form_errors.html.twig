{% form_theme form _self %}

{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
        <ul class="list-unstyled">
            {% for error in errors %}
                {% if error.message == 'This value should not be blank.' %}
                    <li class="text-danger"><i class="fa fa-exclamation" aria-hidden="true"></i> Ce champ ne peut pas Ãªtre vide.</li>
                {% else %}
                    <li class="text-danger"><i class="fa fa-exclamation" aria-hidden="true"></i> {{ error.message }}</li>
                {% endif %}
            {% endfor %}
        </ul>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}
